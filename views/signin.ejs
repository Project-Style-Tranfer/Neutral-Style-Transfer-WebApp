<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/signin.css">

    <title>Sign-in</title>
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top: 10%;">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form action="/login" method="POST">
                    <div class="row form-group">
                        <label class="col-form-label col-md-4" for="email">Email</label>
                        <input class=" col-md-8" type="email" name="email" id="email" placeholder="email" required>
                    </div>
                    <div class="row form-group">
                        <label class="col-form-label col-md-4" for="password">Password</label>
                        <input class=" col-md-8" type="password" name="password" id="password" placeholder="******" required>
                    </div>
                    <div class="row form-group">
                        <input class="col-md-4 btn btn-dark" type="submit" value="signin" name="signin">
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS. -->
